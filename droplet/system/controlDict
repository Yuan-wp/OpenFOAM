FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
//控制条件
application     reactingParcelFoam;   //求解器名称

startFrom       startTime; 

startTime       0;        //开始时间

stopAt          endTime;

endTime         2;        //结束时间

deltaT          1e-04;      //时间步

writeControl    adjustableRunTime;

writeInterval   0.1;           //每0.1s记录求解结果

purgeWrite      0;               //保存所有结果

writeFormat     ascii; // binary;

writePrecision  10;                //结果精确度           

writeCompression off;

timeFormat      general;

timePrecision   6;                   //时间精确度

runTimeModifiable yes;

adjustTimeStep  yes;

maxCo           0.5;             //最大库朗数

maxDeltaT       0.002;                  //最大时间步


// ************************************************************************* //
