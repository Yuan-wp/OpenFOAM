FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      topoSetDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
//提取液膜表面，建立集合
actions
(
    {
        name    wallFilmFaceSet;   //新建的集合名称
        type    faceSet;         
        action  new;
        source  patchToFace;
        sourceInfo
        {
            name wallFilm;     //提取的表面名称
        }
        //新建faceset
    }
    {
    
        name    mirrorFaceSet;
        type    faceSet;
        action  new;
        source  patchToFace;
        sourceInfo
        {
            name mirror;
        }
    }
    {
        name    wallFilmFace;
        type    faceZoneSet;
        action  new;
        source  setToFaceZone;
        sourceInfo
        {
            faceSet wallFilmFaceSet;
        }
       // 将提取的faceset生成faceZoneSet集合（剥离模型使用）
    }
    {
        name    mirrorFace;
        type    faceZoneSet;
        action  new;
        source  setToFaceZone;
        sourceInfo
        {
            faceSet mirrorFaceSet;
        }
    }
);

