FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      SurfaceFilmProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

surfaceFilmModel thermoSingleLayer;          //表面液膜模型

regionName      wallFilmRegion;              //区域名称

active          true;

thermoSingleLayerCoeffs
{
    filmThermoModel liquid;

    liquidCoeffs
    {
        useReferenceValues no;
        liquid      H2O;
    }

    filmViscosityModel liquid;                          //粘性模型

    deltaWet    1e-4;                        //大于1e-4为湿表面

    hydrophilic no;

    radiationModel  none;

    turbulence  laminar;                 //层流
    laminarCoeffs
    {
        Cf          0.005;                       
    }

    upperSurfaceModels                         //上下表面热转化系数
    {
        /*
        heatTransferModel constant;
        constantCoeffs
        {
           c0              1e-8;
        }
        */
        heatTransferModel mappedConvectiveHeatTransfer;
    }

    lowerSurfaceModels
    {
        heatTransferModel constant;
        constantCoeffs
        {
            c0              50;
        }
    }

    forces
    (
        thermocapillary                             //毛细力
        distributionContactAngle                    //接触角
    );

    distributionContactAngleCoeffs
    {
        Ccf             0.085;                          //没找到

        distribution
        {
            type            normal;              //正态分布
            normalDistribution
            {
                minValue        50;             //最小值
                maxValue        100;            //最大值
                expectation     75;             //期望值
                variance        100;            //方差
            }
        }

        zeroForcePatches ();
    }

    injectionModels                                
    (
        curvatureSeparation           //剥离模型  F_sum = F_inertial + F_body + F_surface  F_sum<0发生剥离
        drippingInjection             //剥离模型  当大于稳定厚度出现剥离
    );

    curvatureSeparationCoeffs   
    {
        definedPatchRadii
        (
            ("region0_to_wallFilmRegion_wallFilmFace" 0)  //出现剥离的表面  选择toposet提取的液膜表面集合
        );
    }

    drippingInjectionCoeffs
    {
        cloudName    reactingCloud1;             //粒子云名称
        deltaStable  0;                          //稳定液膜厚度

        particlesPerParcel 100.0;                //每个粒子束中的粒子

        parcelDistribution                       //粒子分布
        {
            type         RosinRammler;            //RosinRammler分布
            RosinRammlerDistribution
            {
                minValue        5e-04;
                maxValue        0.0012;
                d               7.5e-05;
                n               0.5;
            }
        }
    }

    phaseChangeModel none
;

    /
    
    
   /*standardPhaseChangeCoeffs
    {
        Tb              373;
        deltaMin        1e-8;
        L               1.0;*/
    }
}


