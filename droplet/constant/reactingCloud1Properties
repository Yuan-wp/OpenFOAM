FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      reactingCloud1Properties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
//粒子模型
solution
{
    active          true;
    //模型打开
    coupled         yes;
    //双向耦合打开
    transient       yes;
    //瞬态
    cellValueSourceCorrection yes;
    //双向耦合打开时打开此项，关闭时此项也关闭
    maxCo           0.3;   //粒子最大库朗数
      
    sourceTerms     //源项
    {
        schemes
        {
            rho             explicit 1;    
            U               explicit 1;
            Yi              explicit 1;
            h               explicit 1;
            radiation       explicit 1;
        }
    }

    interpolationSchemes //插值模式
    {
        rho             cell;
        U               cellPoint;
        thermo:mu       cell;
        T               cell;
        Cp              cell;
        kappa           cell;
        p               cell;
    }

    integrationSchemes  //方程组装方案
    {
        U               Euler;
        T               analytical;
    }
}

constantProperties 
{
    rho0            1000;  //密度
    T0              300;     //温度bir
    Cp0             4187;    //比热容

    constantVolume  false;
}

subModels    //子模型
{
    particleForces    //粒子力
    {
        sphereDrag;   //0.5*rho*u^2*A
        gravity;      //重力
    }

    injectionModels   //喷射模型
    {
        model1
        {
            type            coneInjection;     //实心锥喷射模型
            SOI             0.000;             //开始时间
            duration        20.000;              //持续时间
            position        (0.475 0.5 0.55);     //位置
            direction       (0 0 -1);             //方向

            massTotal       5;                   //总质量
            parcelsPerSecond 500;                    //500个粒子每秒
            parcelBasisType mass;                     //质量
            flowRateProfile constant 0.02;            //不确定 体积流率？
            Umag            constant 2;               //速度绝对值
            thetaInner      constant 0;               //内锥角
            thetaOuter      constant 45;              //外锥角

            sizeDistribution                       //分布模型
            {
                type         RosinRammler;               
                RosinRammlerDistribution
                {
                    minValue        5e-04;      //最小值        
                    maxValue        0.0012;    //最大值
                    d               7.5e-05;       //特征粒径
                    n               0.5;             //均匀度
                }
            }
        }

        
    }

    dispersionModel none;                                              

    patchInteractionModel standardWallInteraction;         //壁面撞击模型

    heatTransferModel none;                                    //热转化模型

    compositionModel singleMixtureFraction;

    phaseChangeModel none;

    devolatilisationModel none;

    surfaceReactionModel none;

    stochasticCollisionModel none;

    surfaceFilmModel thermoSurfaceFilm;                           //表面液膜模型

    radiation       off;

    standardWallInteractionCoeffs
    {
        type            rebound;                    //反弹
    }

    singleMixtureFractionCoeffs                       //混合系数
    {
        phases
        (
            gas
            {
            }
            liquid
            {
                H2O          1;
            }
            solid
            {
            }
        );
        YGasTot0        0;
        YLiquidTot0     1;
        YSolidTot0      0;
    }

    thermoSurfaceFilmCoeffs                    
    {
        interactionType splashBai;                 
        deltaWet        0.0005;                   //液膜厚度大于0.0005为湿表面
        Adry            2630;                     //干表面粗糙系数
        Awet            1320;                     //湿表面粗糙系数
        Cf              0.6;                      //壁面摩擦系数
    }
}


cloudFunctions
{}


