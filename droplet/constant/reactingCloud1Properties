FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      reactingCloud1Properties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
//粒子模型
solution
{
    active          true;
    //模型打开
    coupled         yes;
    //双向耦合打开
    transient       yes;
    //瞬态
    cellValueSourceCorrection yes;
    //双向耦合打开时打开此项，关闭时此项也关闭
    maxCo           0.3;   //粒子最大库朗数
      
    sourceTerms     //源项
    {
        schemes
        {
            rho             explicit 1;    
            U               explicit 1;
            Yi              explicit 1;
            h               explicit 1;
            radiation       explicit 1;
        }
    }

    interpolationSchemes //插值模式
    {
        rho             cell;
        U               cellPoint;
        thermo:mu       cell;
        T               cell;
        Cp              cell;
        kappa           cell;
        p               cell;
    }

    integrationSchemes  //方程组装方案
    {
        U               Euler;
        T               analytical;
    }
}

constantProperties 
{
    rho0            1000;  //密度
    T0              300;     //温度bir
    Cp0             4187;    //比热容

    constantVolume  false;
}

subModels    //子模型
{
    particleForces    //粒子力
    {
        sphereDrag;   //0.5*rho*u^2*A
        gravity;      //重力
    }

    injectionModels   //喷射模型
    {
        model1
        {
            type            coneInjection;     //实心锥喷射模型
            SOI             0.000;             //开始时间
            duration        20.000;              //持续时间
            position        (0.475 0.5 0.55);     //位置
            direction       (0 0 -1);             //方向

            massTotal       5;                   //总质量
            parcelsPerSecond 500;                    //500个粒子每秒
            parcelBasisType mass;                     //质量
            flowRateProfile constant 0.02;                    
            Umag            constant 2;
            thetaInner      constant 0;
            thetaOuter      constant 45;

            sizeDistribution
            {
                type         RosinRammler;
                RosinRammlerDistribution
                {
                    minValue        5e-04;
                    maxValue        0.0012;
                    d               7.5e-05;
                    n               0.5;
                }
            }
        }

        
    }

    dispersionModel none;

    patchInteractionModel standardWallInteraction;

    heatTransferModel none;

    compositionModel singleMixtureFraction;

    phaseChangeModel none;

    devolatilisationModel none;

    surfaceReactionModel none;

    stochasticCollisionModel none;

    surfaceFilmModel thermoSurfaceFilm;

    radiation       off;

    standardWallInteractionCoeffs
    {
        type            rebound;
    }

    singleMixtureFractionCoeffs
    {
        phases
        (
            gas
            {
            }
            liquid
            {
                H2O          1;
            }
            solid
            {
            }
        );
        YGasTot0        0;
        YLiquidTot0     1;
        YSolidTot0      0;
    }

    thermoSurfaceFilmCoeffs
    {
        interactionType splashBai;
        deltaWet        0.0005;
        Adry            2630;
        Awet            1320;
        Cf              0.6;
    }
}


cloudFunctions
{}


