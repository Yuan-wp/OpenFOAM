FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      htcConv;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
#换热系数
dimensions      [1 0 -1 1 0 0 0];

internalField   uniform 0;

boundaryField
{
    walls
    {
        type            calculated;
        value           uniform 0;
    }

    "(region0_to.*)"
    {
        type            convectiveHeatTransfer;
        #该边界条件提供了对流换热系数条件
        L               1;
        #长度尺度
        value           uniform 0;
    }
}


