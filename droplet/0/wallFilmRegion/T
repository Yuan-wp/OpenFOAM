FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0/wallFilmRegion";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
//液膜区域温度条件
dimensions      [0 0 0 1 0 0 0];

internalField   uniform  300;

boundaryField
{
    // 液膜外表面
    "(.*top)"
    {
        type            zeroGradient;
    }

    // 与背景域匹配面
    "(region0_to.*)"
    {
        type            zeroGradient;
        }

    // 侧面壁面
    walls
    {
        type            zeroGradient;
    }
}

