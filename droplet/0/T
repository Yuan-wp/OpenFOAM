FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];
#温度场 单位K
internalField   uniform 300;
#内部场初始值 300k
boundaryField
{
    walls
    {
        type            zeroGradient;

    }

     "(region0_to.*)"
    {
        type            fixedValue;
        #类型固定值 边界场不随时间变化
        value           uniform 300;
    }
}


