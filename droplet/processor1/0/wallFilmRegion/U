        type            slip;
    }
    region0_to_wallFilmRegion_mirrorFace
    {
        type            slip;
    }
    procBoundary1to0
    {
        type            processor;
        value           uniform (0 0 0);
    }
    procBoundary1to2
    {
        type            processor;
        value           uniform (0 0 0);
    }
